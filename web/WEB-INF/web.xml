<?xml version="1.0" encoding="UTF-8"?>
<web-app version="6.1" xmlns="https://jakarta.ee/xml/ns/jakartaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="https://jakarta.ee/xml/ns/jakartaee https://jakarta.ee/xml/ns/jakartaee/web-app_6_1.xsd">
    <listener>
        <description>ServletContextListener</description>
        <listener-class>controller.PlayRecordListener</listener-class>
    </listener>
    <servlet>
        <servlet-name>HomeServlet</servlet-name>
        <servlet-class>controller.HomeServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>controller.LoginServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>PremiumController</servlet-name>
        <servlet-class>controller.PremiumController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ChatServlet</servlet-name>
        <servlet-class>controller.ChatServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>PaymentController</servlet-name>
        <servlet-class>controller.PaymentController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>HomeServlet</servlet-name>
        <url-pattern>/home</url-pattern>
        <url-pattern>/home/search</url-pattern>
        <url-pattern>/home/library</url-pattern>
        <url-pattern>/home/create-playlist</url-pattern>
        <url-pattern>/home/liked-songs</url-pattern>
        <url-pattern>/home/artist</url-pattern>
        <url-pattern>/home/album</url-pattern>
        <url-pattern>/home/track</url-pattern>
        <url-pattern>/home/topsong</url-pattern>
        <url-pattern>/home/genre</url-pattern>
        <url-pattern>/home/all-artists</url-pattern>
        <url-pattern>/home/all-albums</url-pattern>
        <url-pattern>/home/artist-tracks</url-pattern>
        <url-pattern>/home/artist-albums</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <welcome-file-list>
        <welcome-file>home</welcome-file>
    </welcome-file-list>
    <servlet>
        <servlet-name>AdminController</servlet-name>
        <servlet-class>controller.AdminController</servlet-class>
        <multipart-config>
            <max-file-size>10485760</max-file-size>
            <max-request-size>20971520</max-request-size>
            <file-size-threshold>5242880</file-size-threshold>
        </multipart-config>
    </servlet>
    <servlet-mapping>
        <servlet-name>AdminController</servlet-name>
        <url-pattern>/admin</url-pattern>
        <url-pattern>/admin/usermanagement</url-pattern>
        <url-pattern>/admin/orders</url-pattern>
        <url-pattern>/admin/tracks</url-pattern>
        <url-pattern>/admin/albums</url-pattern>
        <url-pattern>/admin/artists</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>PremiumController</servlet-name>
        <url-pattern>/premium</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>PaymentController</servlet-name>
        <url-pattern>/payment</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
